# Docker Compose Environment Variables for spaced-repetition-capstone
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# MongoDB Atlas Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?appName=appname
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/spaced_repetition?appName=spaced-repetition

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRY=7d

# CORS Configuration (comma-separated list of allowed origins)
CLIENT_ORIGIN=http://localhost:80,http://localhost:3000

# Client API Endpoint (for Docker network)
REACT_APP_API_BASE_URL=http://localhost/api

# Optional: Version tag for images
VERSION=latest
