apiVersion: v1
kind: Secret
metadata:
  name: spaced-repetition-secrets
  namespace: spaced-repetition
type: Opaque
data:
  # MongoDB Atlas Connection String (base64 encoded)
  # Format: mongodb+srv://username:password@cluster.mongodb.net/database?appName=appname
  # Example: echo -n "mongodb+srv://user:pass@cluster.mongodb.net/spaced_repetition?appName=spaced-repetition" | base64
  MONGODB_URI: bW9uZ29kYitzcnY6Ly91c2VybmFtZTpwYXNzd29yZEBjbHVzdGVyLm1vbmdvZGIubmV0L3NwYWNlZF9yZXBldGl0aW9uP2FwcE5hbWU9c3BhY2VkLXJlcGV0aXRpb24=

  # JWT Secret (base64 encoded)
  # Example: echo -n "your-super-secret-jwt-key-here" | base64
  JWT_SECRET: eW91ci1zdXBlci1zZWNyZXQtand0LWtleS1oZXJl

---
# INSTRUCTIONS:
# 1. Copy this file to secrets.yaml
# 2. Generate base64 encoded values for your secrets:
#    - MongoDB Atlas connection string
#    - JWT secret (use a strong random string)
# 3. Replace the example values above with your base64 encoded secrets
# 4. DO NOT commit secrets.yaml to git (it's in .gitignore)
#
# To encode a value:
#   echo -n "your-secret-value" | base64
#
# To decode a value (for verification):
#   echo "base64-encoded-value" | base64 -d
